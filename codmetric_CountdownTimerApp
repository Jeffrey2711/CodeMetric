import tkinter as tk
from tkinter import simpledialog, messagebox
import time

def start_countdown():
    try:
        
        start_time = simpledialog.askinteger("Input", "Enter the number of seconds to countdown from:")
        
        if start_time is None:  
            return
    
        for remaining in range(start_time, -1, -1):
            label.config(text=str(remaining))   
            root.update()                       
            time.sleep(1)                       
        
        messagebox.showinfo("Done", "Countdown Finished")
    except Exception as e:
        messagebox.showerror("Error", f"Something went wrong: {e}")

root = tk.Tk()
root.title("Countdown Timer")
root.geometry("300x200")

label = tk.Label(root, text="Press Start", font=("Times New Roman", 25))
label.pack(pady=40)

start_button = tk.Button(root, text="Start Countdown", command=start_countdown)
start_button.pack()

root.mainloop()
