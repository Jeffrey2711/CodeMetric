import tkinter as tk
from tkinter import messagebox
import os

FILE_NAME = "notes.txt"

def load_notes():
    if os.path.exists(FILE_NAME):
        with open(FILE_NAME, "r") as f:
            return [line.strip() for line in f.readlines()]
    return []

def save_notes(notes):
    with open(FILE_NAME, "w") as f:
        for note in notes:
            f.write(note + "\n")

def add_note():
    text = entry.get().strip()
    if text:
        notes.append(text)
        listbox.insert(tk.END, text)
        save_notes(notes)
        entry.delete(0, tk.END)
    else:
        messagebox.showwarning("Warning", "Note cannot be empty")

def delete_note():
    sel = listbox.curselection()
    if sel:
        idx = sel[0]
        notes.pop(idx)
        listbox.delete(idx)
        save_notes(notes)
    else:
        messagebox.showwarning("Warning", "Select a note to delete")

root = tk.Tk()
root.title("Simple Notes App")
root.geometry("300x400")

notes = load_notes()

entry = tk.Entry(root, width=25)
entry.pack(pady=10)

save_btn = tk.Button(root, text="Save Note", command=add_note)
save_btn.pack()

listbox = tk.Listbox(root, width=35, height=15)
listbox.pack(pady=10)

for n in notes:
    listbox.insert(tk.END, n)

del_btn = tk.Button(root, text="Delete Note", command=delete_note)
del_btn.pack(pady=5)

root.mainloop()
